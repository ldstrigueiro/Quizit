<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quizit.quizit.com.quizit.activities.HomeActivity">

    <TextView
        android:id="@+id/txtNomeHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nome"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtSemestreHome"
        app:layout_constraintStart_toStartOf="@+id/txtSemestreHome"
        app:layout_constraintTop_toBottomOf="@+id/txtSemestreHome" />

    <TextView
        android:id="@+id/txtSemestreHome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/btnJogar"
        android:layout_alignStart="@+id/txtNomeHome"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Semestre"
        app:layout_constraintEnd_toEndOf="@+id/imgPerfilHome"
        app:layout_constraintStart_toStartOf="@+id/imgPerfilHome"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilHome" />

    <Button
        android:id="@+id/btnJogar"
        android:layout_width="141dp"
        android:layout_height="70dp"
        android:layout_below="@+id/txtNomeHome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/btnJogar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnJogarSolo"
        app:layout_constraintStart_toStartOf="@+id/btnJogarSolo"
        app:layout_constraintTop_toBottomOf="@+id/btnJogarSolo"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/txtPontuacaoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Pontos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPerfilHome"
        android:layout_width="156dp"
        android:layout_height="151dp"
        android:layout_below="@+id/txtPontuacaoHome"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="209dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPerfilHome"
        app:layout_constraintEnd_toEndOf="@+id/imgPerfilHome"
        app:layout_constraintStart_toStartOf="@+id/imgPerfilHome"
        app:layout_constraintTop_toTopOf="@+id/imgPerfilHome" />

    <Button
        android:id="@+id/btnJogarSolo"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:text="@string/btnJogarSolo"
        app:layout_constraintEnd_toEndOf="@+id/txtNomeHome"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/txtNomeHome"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeHome" />

    <ImageButton
        android:id="@+id/btnConfigHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_preferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
