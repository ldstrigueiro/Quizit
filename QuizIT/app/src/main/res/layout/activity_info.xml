<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.quizit.activities.InfoActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:text="QuizIT Versão: 1.0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Developed by: Lucas Dilan, FIlipe Messias and Igor Fillipe" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="83dp"
        android:text="FAQ"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_marginStart="17dp"
        android:text="Como funciona o calculo por tras da minha pontuação?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:text="R: É calculado a partir da média dos seus acertos. Os erros são ignorados neste cálculo."
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:text="O que é o Ratio que aparece no meu desempenho?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:text="R: É a razão obtida atravéz da divisão dos seus acertos pelos seus erros."
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:text="Eu sou do primeiro semestre, jogarei contra os veteranos?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:text="R: Não, você apenas disputa ranking com alunos do seu semestre."
        android:textColor="@android:color/holo_red_dark" />
</RelativeLayout>